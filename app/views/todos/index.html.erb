


  <div class="row hide-for-small-only">
    <div class="medium-10 medium-centered large-8 large-centered columns" style="
      padding-left: 0;
      padding-right: 0;
    ">
      <%= form_for build_todo do |f| %>
        <div class="row collapse">
          <div class="small-10 columns">
            <%= f.text_field :title, :required => true, :placeholder => 'Add new todo here' %>
          </div>
          <div class="small-2 columns">
            <%= f.submit 'Add', :class => 'button postfix' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>


<div class="row">
  <div class="small-12 medium-10 medium-centered large-8 large-centered columns panel">

    <% if @todos.empty? %>
      <div class="text-center">There are no todos yet.</div>

    <% else %>
    <p class="text-center">
<a id='hideCompletedBtn' style="display: none;">Hide Completed</a>
<a id='showCompletedBtn' style="display: none;">Show Completed</a>
</p>

      <% @todos.each do |todo| %>

        <div class="row">
          <div class="small-7 columns">
            <p>
              <span class="<%= 'completed' if todo.complete? %>"><%= link_to todo.title, completed_todo_path(todo), method: :put, class: 'todo-title' %></span>
            </p>
          </div>

          <div class="small-5 columns">
            <ul class="nav pull-right">
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_todo_path(todo) %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, todo_path(todo), method: :delete %>
            </ul>
          </div>
        </div>


      <% end %>

      <div class="row">
        <div class="small-12 columns text-right">
          <%= link_to 'Clear All', delete_all_todos_path, method: :delete, data: { confirm: 'Are you sure you want to delete all items?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>





